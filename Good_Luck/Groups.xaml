<Window x:Class="Good_Luck.Groups"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Good_Luck"
        mc:Ignorable="d"
        Title="Groups" Height="300" Width="300">
    <Grid>
        <DataGrid Name="dg1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding GroupId}" Header="GroupId" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding StudentId}" Header="StudentId" Width="100"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Width="73" Height="30" HorizontalAlignment="Right" Margin="0,230,210.6,10.4" Click="Delete_Click">מחיקה</Button>
        <Button Width="80" Height="30" HorizontalAlignment="Right" Margin="0,230,112.6,10.4" Click="Update_Click">עריכה</Button>
        <Button Width="74" Height="30" HorizontalAlignment="Right" Margin="0,230,9.6,10.4" Click="New_Click">חדש</Button>
    </Grid>
</Window>

<Window x:Class="Good_Luck.Donation2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Good_Luck"
        mc:Ignorable="d"
        Title="Donation2" Height="300" Width="300">
    <Grid>
        <DataGrid Name="dg1" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DoationId}" Header="DonationId" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding DonorId}" Header="DonorId" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Amount}" Header="Amount" Width="100"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>
        <Button Width="100" Height="30" HorizontalAlignment="Right" Margin="0,222,19.6,18.4" Click="new_Donation">חדש</Button>
        <Button Width="100" Height="30" HorizontalAlignment="Right" Margin="0,222,124.6,18.4" Click="Update_Click">עריכה</Button>

    </Grid>
</Window>
